.btn {
  width: 100%;
  background: #fff;
  font-size: 30rpx;
  padding: 25rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items:center;
  border-top:1rpx solid #f0f0f0;
  color:#323232
}
.arrow {
  width: 40rpx;
  height: 40rpx;
}
.listitem{
  width:100%;
  background: #fff;
  display: flex;
  padding:20rpx 62rpx 20rpx 32rpx;
  justify-content: space-between;  align-items: center;
  border-bottom:1rpx solid #f8f8f8
}
.rightpart{
  justify-content: flex-end;
  align-items: center;
  display: flex;
}
.infobox{
  display: flex;
}
.wxavatar{
  width:74rpx;
  height:74rpx;
  margin-right:20rpx
}
.avatar{
  background: #D8D8D8;
  border: 1px solid #979797;
  border-radius: 100px;
  width:74rpx;
  height:74rpx;
  margin-right:20rpx
}
.infobox .name{
  display: flex;
  flex-direction: column;
  align-items:center
}
.ranknum{
  display: inline-block;
  width:40rpx;
  line-height: 74rpx;
  font-size: 30rpx;

}
.ranknum.bright{
  font-weight: bold;
  font-size: 34rpx;
  color: #18ACF6
}
.title {
  font-size: 28rpx;
  color: #000000;
  flex:1;
  line-height: 74rpx
}
.time{
  font-size: 22rpx;
  color: #C2C2C2;
  margin-top:5rpx
}
.clearbtn{
  border: 2rpx solid #CCCCCC;
  border-radius: 60rpx;
  font-size:28rpx;
  height:60rpx;
  width:150rpx;
  text-align: center;
  line-height: 60rpx
}
.exbtn{
  border: 2rpx solid #FF7100;
  color: #FF7100;
  margin-right:10rpx
}
.search-box{
  width:100%;
  background: #fff;
  padding: 13rpx 30rpx ;
  border-bottom: 1rpx solid #f4f4f4;
  position: fixed;
  top:0;
  left:0;
  display: flex;
  padding: 15rpx;
}
.setting{
  width:60rpx;
  height:60rpx;
  background: #fff
}
.input-box{
  display: flex;
  flex:1;
  align-items: center;
  padding-right:15rpx;
}
.search-box input{
  font-size: 34rpx;
  flex:1
}
.offset{
  width:100%;
  height:70rpx;
}
.friend-num{
  display: flex;
  justify-content: space-between;
  color:#ccc;
  width:100%;
  padding:10rpx 20rpx;
  background: #f4f4f4
}